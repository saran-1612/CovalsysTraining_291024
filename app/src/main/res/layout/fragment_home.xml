<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    >

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/emp_layout"
    android:visibility="gone"
   >

    <TextView
        android:layout_width="405dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:text="Covalsysoft solutions pvt.ltd"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="405dp"
        android:layout_height="90dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="The great thing in this world is not so much where you stand, as in what direction you are moving."
        />
    <TextView
        android:layout_width="405dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Employee Details"
        android:textAlignment="center"
        />

    <GridLayout
        android:layout_marginTop="270dp"
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="330dp"
        android:background="@color/purple"
        android:columnCount="2"
        android:rowCount="2">


        <androidx.cardview.widget.CardView
            android:layout_width="173dp"
            android:layout_height="145dp"
            android:id="@+id/emp_name"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            android:layout_row="0"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Name"
                    android:textSize="30dp"
                    android:id="@+id/editname"
                    android:background="@color/grey"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:textSize="30dp"
                    android:id="@+id/textname"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="173dp"
            android:layout_height="145dp"
            android:id="@+id/emp_empid"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            android:layout_row="0"
            android:layout_column="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="EmpID"
                    android:textSize="30dp"
                    android:id="@+id/editempid"
                    android:background="@color/grey"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:textSize="30dp"
                    android:id="@+id/textempid"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="173dp"
            android:layout_height="145dp"
            android:id="@+id/emp_group"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            android:layout_row="1"
            android:layout_column="0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Dept"
                    android:textSize="30dp"
                    android:id="@+id/editgroup"
                    android:background="@color/grey"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:textSize="30dp"
                    android:id="@+id/textgroup"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="173dp"
            android:layout_height="145dp"
            android:id="@+id/emp_reporting"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            android:layout_row="1"
            android:layout_column="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Manager"
                    android:id="@+id/editmanager"
                    android:textSize="30dp"
                    android:background="@color/grey"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:textSize="30dp"
                    android:id="@+id/textmanager"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</RelativeLayout>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/admin_layout">

<TextView
    android:layout_width="405dp"
    android:layout_height="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginStart="30dp"
    android:text="Covalsysoft solutions pvt.ltd"
    android:layout_marginEnd="30dp"
    android:textSize="20dp"
    android:textStyle="bold"
    android:textColor="@color/black"/>
<TextView
    android:layout_width="405dp"
    android:layout_height="90dp"
    android:layout_marginTop="70dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:textSize="20dp"
    android:textStyle="italic"
    android:text="The great thing in this world is not so much where you stand, as in what direction you are moving."
    />
    <TextView
        android:layout_width="405dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Details"
        android:textAlignment="center"
        />

<GridLayout
    android:layout_marginTop="270dp"
    android:id="@+id/grid1"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_height="440dp"
    android:background="@color/purple"
    android:columnCount="2"
    android:rowCount="2">


    <androidx.cardview.widget.CardView
        android:layout_width="173dp"
        android:layout_height="195dp"
        android:id="@+id/admin_name"
        android:layout_gravity="top"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:layout_row="0"
        android:layout_column="0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Total Employee"
                android:textSize="30dp"
                android:id="@+id/edittotalemp"
                android:background="@color/grey"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:textSize="30dp"
                android:id="@+id/totalemployee"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="173dp"
        android:layout_height="195dp"
        android:id="@+id/admin_empid"
        android:layout_gravity="top"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:layout_row="0"
        android:layout_column="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Trainee Employee"
                android:textSize="30dp"
                android:id="@+id/edittraineeemp"
                android:background="@color/grey"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:textSize="30dp"
                android:id="@+id/traineeemp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="173dp"
        android:layout_height="195dp"
        android:id="@+id/group"
        android:layout_gravity="top"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:layout_row="1"
        android:layout_column="0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Project  employee"
                android:textSize="30dp"
                android:id="@+id/editprojectemp"
                android:background="@color/grey"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:textSize="30dp"
                android:id="@+id/projectemp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="173dp"
        android:layout_height="195dp"
        android:id="@+id/reporting"
        android:layout_gravity="top"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:layout_row="1"
        android:layout_column="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Manager Employee"
                android:id="@+id/editmanageremp"
                android:textSize="30dp"
                android:background="@color/grey"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:textSize="30dp"
                android:id="@+id/manageremp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</GridLayout>
</RelativeLayout>
</RelativeLayout>